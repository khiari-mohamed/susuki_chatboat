# ========================================
# FRONTEND ENVIRONMENT (.env)
# Location: chatboat/.env
# ========================================

# API URL - Backend endpoint
# Development:
REACT_APP_API_URL=http://localhost:8000

# Production (update with your domain):
# REACT_APP_API_URL=https://api.suzuki.tn


# ========================================
# BACKEND ENVIRONMENT (.env)
# Location: suzuki-backend/.env
# ========================================

# Database
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# OpenAI API Key (REQUIRED for chat)
OPENAI_API_KEY="your-openai-api-key-here"

# Gemini API Key (REQUIRED for OCR)
GEMINI_API_KEY="your-gemini-api-key-here"

# Server Configuration
PORT=8000
NODE_ENV=development

# CORS - Frontend URL
FRONTEND_URL="http://localhost:3000"

# ========================================
# DEPLOYMENT CHECKLIST
# ========================================

# Development:
# 1. Frontend: REACT_APP_API_URL=http://localhost:8000
# 2. Backend: PORT=8000, FRONTEND_URL=http://localhost:3000

# Production:
# 1. Frontend: REACT_APP_API_URL=https://api.suzuki.tn
# 2. Backend: PORT=8000, FRONTEND_URL=https://suzuki.tn
# 3. Update DATABASE_URL with production credentials
# 4. Set NODE_ENV=production
